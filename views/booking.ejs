<%- include('partials/header') %>

<div class="container mx-auto px-6 py-10 max-w-2xl">
    <div class="bg-white rounded-xl shadow-xl overflow-hidden">
        <div class="bg-k_red p-4 text-white text-center">
            <h2 class="text-2xl font-bold">Formulir Pendaftaran Online</h2>
        </div>
        
        <form action="/booking" method="POST" class="p-8 space-y-4">
            <div class="grid grid-cols-2 gap-4">
                <div>
                    <label class="block text-gray-700 font-bold mb-2">Nama Lengkap</label>
                    <input type="text" name="namaPasien" required class="w-full border rounded-lg px-4 py-2 focus:outline-none focus:border-k_red">
                </div>
                <div>
                    <label class="block text-gray-700 font-bold mb-2">NIK</label>
                    <input type="text" name="nik" required class="w-full border rounded-lg px-4 py-2 focus:outline-none focus:border-k_red">
                </div>
            </div>

            <div class="grid grid-cols-2 gap-4">
                <div>
                    <label class="block text-gray-700 font-bold mb-2">No. HP/WA</label>
                    <input type="text" name="noHp" required class="w-full border rounded-lg px-4 py-2 focus:outline-none focus:border-k_red">
                </div>
                <div>
                    <label class="block text-gray-700 font-bold mb-2">Pilih Poli</label>
                    <select name="poli" class="w-full border rounded-lg px-4 py-2 focus:outline-none focus:border-k_red">
                        <option value="Umum">Poli Umum</option>
                        <option value="Gigi">Poli Gigi</option>
                        <option value="Anak">Poli Ibu & Anak</option>
                    </select>
                </div>
            </div>

            <div class="grid grid-cols-2 gap-4">
                <div>
                    <label class="block text-gray-700 font-bold mb-2">Dokter</label>
                    <select name="dokter" class="w-full border rounded-lg px-4 py-2 focus:outline-none focus:border-k_red">
                        <option value="Dr. Budi Santoso">Dr. Budi Santoso</option>
                        <option value="Dr. Siti Aminah">Dr. Siti Aminah</option>
                        <option value="Dr. Andi Wijaya">Dr. Andi Wijaya</option>
                    </select>
                </div>
                <div>
                    <label class="block text-gray-700 font-bold mb-2">Tanggal</label>
                    <input type="date" name="tanggal" required class="w-full border rounded-lg px-4 py-2 focus:outline-none focus:border-k_red">
                </div>
            </div>

            <div>
                <label class="block text-gray-700 font-bold mb-2">Jam Periksa</label>
                <select name="jam" class="w-full border rounded-lg px-4 py-2 focus:outline-none focus:border-k_red">
                    <option value="08:00 - 10:00">08:00 - 10:00</option>
                    <option value="10:00 - 12:00">10:00 - 12:00</option>
                    <option value="13:00 - 15:00">13:00 - 15:00</option>
                </select>
            </div>

            <div>
                <label class="block text-gray-700 font-bold mb-2">Keluhan (Opsional)</label>
                <textarea name="keluhan" class="w-full border rounded-lg px-4 py-2 focus:outline-none focus:border-k_red" rows="3"></textarea>
            </div>

            <button type="submit" class="w-full bg-k_red text-white font-bold py-3 rounded-lg hover:bg-red-800 transition">
                Kirim Pendaftaran
            </button>
        </form>
    </div>
</div>

<%- include('partials/footer') %>